<h1>Editing Book</h1>

<!--エラーメッセージ-->
<% if @book.errors.any? %>
  <div id="error">
    <div id="error_explanation">
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </div>

<ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
  
   <%= form_with model: @book do |f| %>
  <div id="field">
  <div id="error_title">
      <label>Title</label>
  </div>
   <div id="error_title">
        <%= f.text_field :title %>
    </div>
  </div>
    
    <div id="error_title">
    
      <label>Body</label>
    </div>
    <div id="error_title">
        <%= f.text_area :body %>
    </div>
      <h4>
        <%= f.submit 'Update Book' %>
      </h4>
    
  <% end %>
   
    
    
<% else %>  
<!--エラーメッセージここまで-->

<%= form_with model: @book, url: book_path(@book.id),method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <h4>
  <%= f.submit 'Update Book'%>
  </h4>

<h4>
  <td><%= link_to "Show", book_path(@book.id) %><td> |
  <td><%= link_to "Back", books_path %><td>
</h4>
<% end %>
<% end %>